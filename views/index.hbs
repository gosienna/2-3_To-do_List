<a href="./todos/new">Add new task</a>
<ul>
    {{#each todos}}
        <li>
           {{this.name}} 
            <a href="./todos/{{this._id}}">view</a>
            <a href="./todos/{{this._id}}/edit">edit</a>
            <form action="./todos/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button type="submit">delete</button>
            </form>
        </li>
    {{/each}}
</ul>